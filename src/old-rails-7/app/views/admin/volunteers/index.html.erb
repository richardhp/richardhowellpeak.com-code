<p id="notice"><%= notice %></p>

<h1>Volunteers</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @volunteers.each do |volunteer| %>
      <tr>
        <td><%= volunteer.email %></td>
        <td><%= link_to 'Show', admin_volunteer_path(volunteer) %></td>
        <td><%= link_to 'Edit', edit_admin_volunteer_path(volunteer) %></td>
        <td><%= link_to 'Destroy', admin_volunteer_path(volunteer), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Volunteer', new_admin_volunteer_path %>
